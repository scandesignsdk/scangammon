<?php

namespace AppBundle\Document;

use Doctrine\ODM\MongoDB\Mapping\Annotations as ODM;

/**
 * AppBundle\Document\Player
 *
 * @ODM\Document
 * @ODM\ChangeTrackingPolicy("DEFERRED_IMPLICIT")
 */
class Player
{
    /**
     * @var string
     *
     * @ODM\Id(strategy="AUTO")
     */
    protected $id;

    /**
     * @var string
     * @ODM\String(name="name")
     */
    protected $name;

    /**
     * @var Game[]
     *
     * @ODM\ReferenceMany(targetDocument="Game")
     */
    protected $games;

    /**
     * @var int
     * @ODM\Integer(name="elo")
     */
    protected $elo = 1500;

}
